{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Frontend (Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend"
    },
    {
      "name": "Debug API (Node)",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/api/index.js",
      "cwd": "${workspaceFolder}/api",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
